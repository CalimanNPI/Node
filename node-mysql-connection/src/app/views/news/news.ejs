<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>News</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <a href="" class="navbar-brand mx-auto">News</a>
    </nav>

    <div class="row">
      <div class="col-md-6 mt-4 text-center">
        <table class="table table-striped table-bordered">
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>News</th>
            <th>Actions</th>
          </tr>
          <% for (var i = 0; i < news.length; i ++) { %>
          <tr>
            <td><%= news[i].id_news %></td>
            <td><%= news[i].title %></td>
            <td><%= news[i].news %></td>
            <td>
              <input type="button" class="btn btn-info" value="Update" />
              <form action="/news/delete" method="post">
                <input
                  type="text"
                  name="news"
                  hidden
                  value="<%- news[i].id_news %>"
                /><input type="submit" class="btn btn-danger" value="Delete" />
              </form>
            </td>
          </tr>
          <% } %>
        </table>
      </div>

      <div class="col-md-6 mt-4 card">
        <form class="card-body" action="/news" method="post">
          <h3 class="card-title">Add News</h3>
          <div class="form-group">
            <input
              name="title"
              type="text"
              class="form-control"
              placeholder="News Titlte"
            />
          </div>
          <div class="form-group">
            <input
              name="news"
              type="text"
              class="form-control"
              placeholder="News Content"
            />
          </div>
          <input type="submit" class="btn btn-primary" />
        </form>
      </div>
    </div>
  </body>
</html>
